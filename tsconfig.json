{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "alwaysStrict": true,
        "sourceRoot": "src",
        "outDir": "dist"
    },
    "include": [
        "src/**/*.ts",
        "typings/**/*.d.ts"
    ],
    "exclude": [
        "typings/**/*-tests.ts"
    ]
}