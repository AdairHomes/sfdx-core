{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "lib": [
            "es2017"
        ],
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "alwaysStrict": true,
        "sourceRoot": "src",
        "outDir": "dist",
        "typeRoots": [
            "./typings",
            "./node_modules/@types"
        ],
        "baseUrl": "./",
        "paths" : {
            "*" : ["./typings/*"]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": []
}