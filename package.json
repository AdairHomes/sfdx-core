{
  "name": "sfdx-core",
  "version": "0.0.6",
  "description": "Core libraries to interact with SFDX projects, orgs, and APIs.",
  "main": "dist/exported",
  "license": "BSD-3-Clause",
  "scripts": {
    "typings": "tsc -p typings/tsconfig.json",
    "lint": "tslint -p .",
    "lint-report": "yarn lint -t checkstyle -o checkstyle.xml",
    "clean": "scripts/clean.js",
    "compile": "tsc -p ./tsconfig.json",
    "build": "yarn clean && yarn lint && yarn compile",
    "watch": "tsc -w -p tsconfig.json",
    "test": "mocha --recursive dist/test/unit",
    "test-with-coverage": "yarn lint-report && scripts/unit-test-with-coverage.js",
    "prepare": "yarn run build"
  },
  "keywords": [
    "force",
    "salesforce",
    "sfdx",
    "salesforcedx"
  ],
  "dependencies": {
    "bunyan-sfdx-no-dtrace": "1.8.2",
    "chalk": "2.3.0",
    "cli-ux": "2.0.4",
    "jsforce": "1.8.0",
    "jsonwebtoken": "7.0.0",
    "lodash": "4.17.4"
  },
  "devDependencies": {
    "@types/chai": "4.0.4",
    "@types/lodash": "4.14.88",
    "@types/mocha": "2.2.42",
    "@types/node": "8.0.25",
    "chai": "4.1.1",
    "istanbul": "v1.1.0-alpha.1",
    "mocha": "2.4.5",
    "shelljs": "0.7.8",
    "sinon": "3.2.1",
    "tslint": "5.9.1",
    "tslint-microsoft-contrib": "5.0.2",
    "typescript": "2.6.2",
    "xunit-file": "1.0.0"
  },
  "types": "dist/exported.d.ts"
}
